{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "#src/*": ["src/*"]
        },
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src", "tests"],
    "exclude": ["tests"]
}
